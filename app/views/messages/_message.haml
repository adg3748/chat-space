%ul
  %li
    .user-message
      %p.user-name
        = message.user.name
      %p.datetime
        - time = message.created_at
        = time.strftime("%Y/%m/%d %H:%M:%S")
    .message-body
      = message.content
      %br
      = image_tag message.image.url, class: "msg-img" unless message.image.url.nil?
