!!!
%html
  %head
    %meta{ content: "text/html", charset: "UTF-8", http: { equiv: "Content-Type" }}
    %title ChatSpace | ChatDesplay
    = csrf_meta_tags
  %body
    %div.chat
      %div.chat-side
        %div.chat-user
          %h5
            %span
              = current_user.name
          %span
            = link_to new_group_path do
              .fa.fa-pencil-square-o
            = link_to edit_user_registration_path do
              .fa.fa-cog
        %div.chat-group
          = link_to '' do
            %div.group-name-side
              = @group.name
            %div.message message
      %div.chat-main
        %div.chat-header
          %div.group-user
            %h4
              %span.group-name-main
                = @group.name
            %p
              %span.members
                Members: noname
          %div.edit
            %p
              = link_to edit_group_path(@group) do
                Edit
        %div.chat-body
          %ul
            %li
              %div.user-message
                %p.user-name
                  noname
                %p.datetime
                  20XX/XX/XX
              %p.message-body
                no message
            %li
              %div.user-message
                %p.user-name
                  noname
                %p.datetime
                  20XX/XX/XX
              %p.message-body
                no message
            %li
              %div.user-message
                %p.user-name
                  noname
                %p.datetime
                  20XX/XX/XX
              %p.message-body
                no message
            %li
              %div.user-message
                %p.user-name
                  noname
                %p.datetime
                  20XX/XX/XX
              %p.message-body
                no message
        %div.chat-footer
          = form_for(@message, url: group_messages_path(@group), method: :post) do |f|
            %div.send-message
              = f.text_area :content, row: "2", placeholder: "type a message"
              %i{ class: "fa fa-picture-o", aria: { hidden: "true" }}
            %div
              = submit_tag :Save, class: "submit", disable_with: "送信中..."
