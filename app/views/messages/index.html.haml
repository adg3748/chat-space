- provide(:title, "ChatDesplay")
%body
  .chat
    .chat-side
      .chat-user
        %h5
          %span
            = current_user.name
        %span
          = link_to new_group_path do
            .fa.fa-pencil-square-o
          = link_to edit_user_registration_path do
            .fa.fa-cog
      .chat-groups
        = render partial: "group", collection: @groups
